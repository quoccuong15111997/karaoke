<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/txtMaBH"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="#295AEC"
        android:textSize="@dimen/pd20"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_weight="2"
        android:text="54630"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtTenBH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 2 3 Chia đôi lối về"
            android:textSize="@dimen/sp14"
            android:layout_margin="3dp"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:id="@+id/txtCaSi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quang Hà"
            android:textSize="@dimen/sp12"
            android:layout_margin="3dp"
            android:textColor="@color/colorGrayDark"/>
        <TextView
            android:id="@+id/txtLoiBH"
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nuốt nước mắt khẽ ôm em ấm lòng..."
            android:textStyle="italic"
            android:textSize="@dimen/sp12"
            android:textColor="@color/colorBlack"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/imgLike"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:src="@drawable/ic_heart"/>
</LinearLayout>